<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.Rithle" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimaryLight</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariantLight</item>
        <item name="colorOnPrimary">@color/colorWhite</item>

        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorWhite</item>

        <item name="colorSurface">@color/colorSurfaceLight</item>
        <item name="colorSurfaceVariant">@color/colorSurfaceRaisedLight</item>
        <item name="android:colorBackground">?attr/colorSurface</item>
        <item name="background">?attr/colorSurface</item>

        <item name="colorOnBackground">@color/colorBlack</item>

        <item name="elevationOverlayEnabled">false</item>

        <item name="tabStyle">@style/TabLayout</item>
    </style>

    <style name="IconOnlyButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconTint">?attr/colorOnPrimary</item>
        <item name="iconPadding">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="strokeColor">@android:color/transparent</item>

        <item name="android:shadowColor">@android:color/transparent</item>

        <item name="android:insetBottom">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:paddingTop">0dp</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
    </style>

    <style name="TabLayout" parent="Widget.Material3.TabLayout">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>
    </style>

    <style name="ToolBar" parent="ThemeOverlay.Material3.Toolbar.Surface">
        <item name="colorControlNormal">?attr/colorOnPrimary</item>

        <item name="android:textColorSecondary">@color/colorWhiteTransparent</item>
    </style>

    <style name="BottomNavigationView" parent="Widget.Material3.BottomNavigationView">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.BottomNavigationView</item>
    </style>

    <style name="ThemeOverlay.App.TabLayout" parent="">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorSurface">@color/colorPrimary</item>
        <item name="colorOnSurface">@color/colorBlack</item>
    </style>

    <style name="ThemeOverlay.App.BottomNavigationView" parent="">
        <item name="colorSurface">@color/colorSurfaceRaisedLight</item>
    </style>
</resources>